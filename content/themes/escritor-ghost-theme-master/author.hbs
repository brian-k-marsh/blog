{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}

{{! Everything inside the #author tags pulls data from the author }}
{{#author}}
<section class="inner-author clearfix">
    <div class="vertical">
        <div class="inner-author__box">
            {{#if image}}
            <figure class="author__image">
                <div class="img" style="background-image: url({{image}})"><span class="hidden">{{name}}'s Picture</span></div>
            </figure>
            {{/if}}
            <h1 class="author__title">{{name}}</h1>
            {{#if bio}}
                <h2 class="author__bio">{{bio}}</h2>
            {{/if}}
            <div class="author__meta">
                {{#if location}}<span class="author__location">{{> pin }}{{location}}</span>{{/if}}
                {{#if website}}<span class="author__link"><a href="{{website}}">{{> link}}{{website}}</a></span>{{/if}}
                <span class="author__stats"><i class="icon-stats"></i><div class="pound">#</div>{{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</span>
            </div>
        </div>
    </div>
</section>
{{/author}}

{{! The main content area on the homepage }}
<main class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
